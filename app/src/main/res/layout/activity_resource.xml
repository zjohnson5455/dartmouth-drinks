<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resources"
        android:textSize="50dp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you're in any trouble, contact these numbers"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/SNS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safety and Security"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/SNSN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#ff0000"
            android:text="646-4000"
            android:textSize="25dp"
            android:paddingRight="10dp"
            android:autoLink="phone"
            android:linksClickable="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Emergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/EmergencyN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#ff0000"
            android:text="911"
            android:textSize="25dp"
            android:paddingRight="10dp"
            android:autoLink="phone"
            android:linksClickable="true"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Know Your Rights"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:onClick="onRightsClick"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:autoLink="web"
        android:text="@string/Good_Sam"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/BAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:layout_gravity="center_vertical"
            android:text="Your BAC:"
            android:textColor="#000000"
            android:paddingRight="10dp"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/BACN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#ff0000"
            android:text=".00"
            android:textSize="25dp"
            />

    </LinearLayout>


</LinearLayout>